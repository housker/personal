{
  "name": "personal",
  "version": "1.0.0",
  "description": "Adelle Housker's personal website",
  "main": "server/index.go",
  "repository": "git@github.com:housker/personal.git",
  "author": "Adelle Housker <housker@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production && concurrently \"yarn run build:server\" \"yarn run build:client\" && ./main",
    "watch": "NODE_ENV=development && concurrently \"yarn run watch:server\" \"yarn run watch:client\"",
    "watch:server": "PORT=3000 && nodemon --exec go run server/main.go --signal SIGTERM",
    "watch:client": "webpack --config webpack.config.dev.js --watch",
    "build:server": "go build server/main.go",
    "build:client": "webpack --config webpack.config.prod.js",
    "lint": "eslint --fix",
    "test": "jest"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "closure-webpack-plugin": "^2.6.1",
    "compression-webpack-plugin": "^11.0.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.9.1",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "firebase-tools": "^13.2.1",
    "google-closure-compiler": "^20230802.0.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.7.7",
    "postcss-loader": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  }
}
